html
    head
        link(href='../css/reset.css',rel='stylesheet')
        link(href='../css/header.css',rel='stylesheet')
    body
        header
            .wd-title-container
                ul.left-logo-name
                    li.wd-common-name
                        a 万店联盟
                ul.right-menu-area
                    li.wd-login-reg
