                - var navlist=['分类','首页有惊喜','美食馆','休闲娱乐','旅游出行','住宿','生活服务','购物'];
                each item,index in navlist
                    if index==1
                        li.surprise
                            a #{item}
                    else 
                        li
                            a #{item}
